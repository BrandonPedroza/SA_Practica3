pipeline {
    agent { docker { image 'node:14-alpine' } }
    stages {
        stage('test') {
            steps {
                sh 'npm test'
            }
        }
    }
    agent { docker { image 'node:14-alpine' } }
    stages {
        stage('build') {
            steps {
                sh 'npm --version'
            }
        }
    }
    agent { docker { image 'node:14-alpine' } }
    stages {
        stage('release') {
            steps {
                sh 'npm start'
            }
        }
    }
}
